    <RelativeLayout
        android:id="@+id/relativesender"
        android:visibility="invisible"
        android:minHeight="50dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textimesender"
            android:text="timeeeee"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/mimi_layout"
            android:layout_below="@+id/textimesender"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textsend"
                android:padding="5dp"
                android:text="sample send message"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeTop"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeImage"
            android:layout_width="wrap_content"
            android:minHeight="120dp"

            android:layout_height="120dp">

            <RelativeLayout

                android:layout_width="40dp"
                android:background="@drawable/round_layoutgrey"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/imageMessage"
                    android:layout_width="15dp"
                    android:background="@drawable/message"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativecontent"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/relativeImage"
            android:layout_marginRight="10dp"
            android:minHeight="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:paddingBottom="5dp"
                android:fontFamily="@font/robotoregular"
                android:text="Parents Meeting"
                android:layout_centerHorizontal="true"
                android:textColor="#5e5d5d"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:text=""
                android:textColor="#4d4c4c"
                android:textSize="@dimen/album_title" />

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_below="@+id/tv_subject"
                android:background="@drawable/roundedrectanglebig"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingRight="@dimen/album_title_padding"
                    android:fontFamily="@font/robotoregular"
                    android:text="Parents meeting wiiil be on 07/02.108.Students are requested to wear schholuniform"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp" />
            </RelativeLayout>

        </RelativeLayout>
